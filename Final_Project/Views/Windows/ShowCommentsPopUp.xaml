<Window x:Class="Final_Project.Views.Windows.ShowCommentsPopUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Final_Project.Views.Windows"
        mc:Ignorable="d"
        Title="ShowCommentsPopUp" Height="450" Width="300">
    <Grid>
        <Border Margin="5"
                BorderBrush="Black" BorderThickness="3">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <DataGrid ItemsSource="{Binding ItemSourceField}" CanUserAddRows="False" CanUserDeleteRows="False" IsReadOnly="True" AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="User Name" Binding="{Binding Customer.UserName}"/>
                        <DataGridTextColumn Header="Comment" Binding="{Binding Text}"/>
                        <DataGridTextColumn Header="Answer" Binding="{Binding Answer}"/>
                        <DataGridCheckBoxColumn Header="Edited" Binding="{Binding Edited}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
