<Page x:Class="Final_Project.Views.Pages.ResturantPanelPages.ResturantPanelReservation"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Final_Project.Views.Pages.ResturantPanelPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ResturantPanelReservation">

    <Grid Background="White">
        <Border Margin="5"
                BorderBrush="Black" BorderThickness="3">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <Button Margin="20" Width="200" 
                        FontSize="20" FontWeight="Bold"
                        Content="EnableReservation"/>
                <TextBlock Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center" 
                        FontSize="18" FontWeight="Light"
                        Text="Enabled"/>
                <TextBlock Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center" 
                        FontSize="15" FontWeight="Light" Foreground="Red"
                        Text="hint"/>
                    
            </StackPanel>
        </Border>
        
    </Grid>
</Page>
