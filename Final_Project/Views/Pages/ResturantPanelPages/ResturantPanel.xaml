<Page x:Class="Final_Project.Views.Pages.ResturantPanelPages.ResturantPanel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Final_Project.Views.Pages.ResturantPanelPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ResturantPanel">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button Width="100"
                    FontFamily="roboto" FontSize="15" FontWeight="Light"
                    Content="Change Menue"/>
            <Button Width="100"
                    FontFamily="roboto" FontSize="15" FontWeight="Light"
                    Content="Change Supply"/>
            <Button Width="100"
                    FontFamily="roboto" FontSize="15" FontWeight="Light"
                    Content="Reservation"/>
            <Button Width="100"
                    FontFamily="roboto" FontSize="15" FontWeight="Light"
                    Content="History"/>
        </StackPanel>
        <Frame x:Name="UserPanelMainFrame" Grid.Row="1" Content="{Binding ResturantPanelFrame}"/>

    </Grid>
</Page>
