<UserControl x:Class="Final_Project.Views.UserControls.FoodMenuItemUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Final_Project.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="90" d:DesignWidth="700">
    <Grid Background="White" Height="80" Width="490">
        <Border Margin="5"
                BorderBrush="DarkGray" BorderThickness="2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="8*" />
                </Grid.ColumnDefinitions>
                <Image Grid.Column="0"
                       Stretch="Uniform"
                       Source="{Binding FoodImageField}" />
                <StackPanel Grid.Column="1"  Margin="5" VerticalAlignment="Center">
                    <TextBlock 
                        FontSize="18" FontWeight="Bold"
                        Text="{Binding FoodNameField}" />
                </StackPanel>
            </Grid>
        </Border>

    </Grid>
</UserControl>
